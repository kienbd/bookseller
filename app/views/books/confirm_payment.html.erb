<% if @res %>
	<h1 style="color: green"> Purchase Success !!! </h1>
	<table border='1'>
		<thead>
			<tr>
				<td>#</td>
				<td>Title</td>
				<td>Author</td>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><img src="<%=@image%>"/></td>
				<td><%= @title %></td>
				<td><%= @author %></td>
			</tr>
		</tbody>
	</table>
<% else %>
	<h1 style="color: red"> Purchase Failed </h1>
<% end %>

<div style="margin-top: 20px">
	<a href="/"> Try again </a>
</div>
